<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content"  android:background="?attr/colorPrimary">

  <Button android:id="@id/actionBackButton" style="@style/Widget.AppCompat.Button.Borderless"
      android:layout_width="wrap_content" android:layout_height="match_parent"
      android:layout_gravity="start|center" android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
      android:drawablePadding="@dimen/app_margin_10dp" android:drawableStart="@drawable/ic_arrow_back_black_24dp"
      android:text="@string/toolbar_back" android:textColor="@color/white"
      android:textSize="@dimen/text_size_18sp"/>

  <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent"
      android:layout_gravity="center" android:gravity="center" android:orientation="vertical">
    <TextView android:id="@android:id/title"
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title" tools:text="123123"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="center" android:textColor="@color/base_yellow"
        android:visibility="visible"/>
    <TextView android:id="@id/subTitle"
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title" tools:text="123123"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="center" android:textColor="@color/white"
        android:textSize="@dimen/text_size_16sp" android:visibility="gone"/>
  </LinearLayout>
  <TextView android:id="@+id/rightTitle"
      android:layout_gravity="end|center"
      android:layout_width="wrap_content" android:layout_height="match_parent"
      android:gravity="center_vertical" android:layout_marginRight="@dimen/app_margin_8dp"
      tools:text="2016" android:textColor="@color/white"
      android:textSize="@dimen/text_size_18sp"/>
</merge>
